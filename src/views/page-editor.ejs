<%
const state = typeof page !== 'undefined' ? 'Edit Page' : 'Create New Page';
title = state;
%>

<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-2xl font-semibold text-white">
                    <%= typeof page !== 'undefined' ? 'Edit Page' : 'Create New Page' %>
                </h1>
                <p class="text-gray-400">Customize your maintenance page</p>
            </div>
            <div class="flex space-x-4">
                <button type="button" id="previewButton" class="btn py-2 px-4 btn-secondary">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Preview
                </button>
                <button type="submit" form="pageForm" class="btn py-2 px-4 btn-primary">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                    </svg>
                    Save
                </button>
            </div>
        </div>

        <% if (messages && messages.success_msg && messages.success_msg.length > 0) { %>
            <div id="success-message" class="border-2 border-neon-green text-white p-4 rounded-lg mb-4 transition-opacity duration-500" data-timeout="<%= settings.messageTimeout || 5000 %>">
                <%= messages.success_msg %>
            </div>
        <% } %>
        <% if (messages && messages.error_msg && messages.error_msg.length > 0) { %>
            <div id="error-message" class="border-2 border-neon-pink text-white p-4 rounded-lg mb-4 transition-opacity duration-500" data-timeout="<%= settings.messageTimeout || 5000 %>">
                <%= messages.error_msg %>
            </div>
        <% } %>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Editor Form -->
            <div class="space-y-6">
                <form id="pageForm" action="<%= typeof page !== 'undefined' ? `/pages/${page._id}?_method=PUT` : '/pages' %>" method="POST">
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                    <!-- Basic Information -->
                    <div class="card p-4">
                        <h3 class="text-lg font-semibold text-white mb-4">Basic Information</h3>
                        <div class="space-y-4">
                            <div>
                                <label for="title" class="label">Title</label>
                                <input type="text" id="title" name="title" required
                                    class="input bg-[#222222] border-dark-600 text-white w-full"
                                    value="<%= typeof page !== 'undefined' ? page.title : '' %>"
                                    placeholder="Enter page title">
                            </div>
                            <div>
                                <label for="content" class="label">Content</label>
                                <textarea id="content" name="content" required
                                    class="input bg-[#222222] border-dark-600 text-white w-full h-32"
                                    placeholder="Enter page content"><%= typeof page !== 'undefined' ? page.content : '' %></textarea>
                            </div>
                            <div>
                                <label for="status" class="label">Status</label>
                                <select id="status" name="status" required
                                    class="input bg-[#222222] border-dark-600 text-white w-full">
                                    <option value="draft" <%= typeof page !== 'undefined' && page.status === 'draft' ? 'selected' : '' %>>Draft</option>
                                    <option value="published" <%= typeof page !== 'undefined' && page.status === 'published' ? 'selected' : '' %>>Published</option>
                                    <option value="archived" <%= typeof page !== 'undefined' && page.status === 'archived' ? 'selected' : '' %>>Archived</option>
                                    <option value="scheduled" <%= typeof page !== 'undefined' && page.status === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
                                </select>
                            </div>

                            <div>
                                <label for="publishType" class="label">Publish Type</label>
                                <select id="publishType" name="publishType" required
                                    class="input bg-[#222222] border-dark-600 text-white w-full">
                                    <option value="now" <%= typeof page === 'undefined' || !page.scheduledFor ? 'selected' : '' %>>Publish Now</option>
                                    <option value="schedule" <%= typeof page !== 'undefined' && page.scheduledFor ? 'selected' : '' %>>Schedule for Later</option>
                                </select>
                            </div>

                            <div id="scheduleDateContainer" class="<%= typeof page !== 'undefined' && page.scheduledFor ? '' : 'hidden' %>">
                                <label for="scheduledFor" class="label">Schedule Date & Time</label>
                                <input type="datetime-local" id="scheduledFor" name="scheduledFor"
                                    class="input bg-[#222222] border-dark-600 text-white w-full"
                                    value="<%= typeof page !== 'undefined' && page.scheduledFor ? new Date(page.scheduledFor).toISOString().slice(0, 16) : '' %>">
                                <p class="mt-1 text-sm text-gray-500">Select when you want this page to be published</p>
                            </div>
                        </div>
                    </div>

                    <!-- Design Settings -->
                    <div class="card p-4 mt-8">
                        <h3 class="text-lg font-semibold text-white mb-4">Design Settings</h3>
                        <div class="space-y-4">
                            <div>
                                <label for="backgroundColor" class="label">Background Color</label>
                                <input type="color" id="backgroundColor" name="design[backgroundColor]"
                                    class="input bg-[#222222] border-dark-600 text-white w-full h-10"
                                    value="<%= typeof page !== 'undefined' ? page.design.backgroundColor : '#000000' %>">
                            </div>
                            <div>
                                <label for="textColor" class="label">Text Color</label>
                                <input type="color" id="textColor" name="design[textColor]"
                                    class="input bg-[#222222] border-dark-600 text-white w-full h-10"
                                    value="<%= typeof page !== 'undefined' ? page.design.textColor : '#ffffff' %>">
                            </div>
                            <div>
                                <label for="fontFamily" class="label">Font Family</label>
                                <select id="fontFamily" name="design[fontFamily]"
                                    class="input bg-[#222222] border-dark-600 text-white w-full">
                                    <option value="Inter" <%= typeof page !== 'undefined' && page.design.fontFamily === 'Inter' ? 'selected' : '' %>>Inter</option>
                                    <option value="Roboto" <%= typeof page !== 'undefined' && page.design.fontFamily === 'Roboto' ? 'selected' : '' %>>Roboto</option>
                                    <option value="Open Sans" <%= typeof page !== 'undefined' && page.design.fontFamily === 'Open Sans' ? 'selected' : '' %>>Open Sans</option>
                                </select>
                            </div>
                            <div>
                                <label for="layout" class="label">Layout</label>
                                <select id="layout" name="design[layout]"
                                    class="input bg-[#222222] border-dark-600 text-white w-full">
                                    <option value="centered" <%= typeof page !== 'undefined' && page.design.layout === 'centered' ? 'selected' : '' %>>Centered</option>
                                    <option value="left-aligned" <%= typeof page !== 'undefined' && page.design.layout === 'left-aligned' ? 'selected' : '' %>>Left Aligned</option>
                                    <option value="right-aligned" <%= typeof page !== 'undefined' && page.design.layout === 'right-aligned' ? 'selected' : '' %>>Right Aligned</option>
                                </select>
                            </div>
                            <div>
                                <label for="logo" class="label">Logo URL</label>
                                <input type="url" id="logo" name="design[logo]"
                                    class="input bg-[#222222] border-dark-600 text-white w-full"
                                    value="<%= typeof page !== 'undefined' ? page.design.logo : '' %>"
                                    placeholder="Enter logo URL">
                            </div>
                            <div>
                                <label for="customCss" class="label">Custom CSS</label>
                                <textarea id="customCss" name="design[customCSS]"
                                    class="input bg-[#222222] border-dark-600 text-white w-full h-32 font-mono text-sm"
                                    placeholder="Enter custom CSS styles"><%= typeof page !== 'undefined' ? page.design.customCSS : '' %></textarea>
                                <p class="mt-1 text-sm text-gray-500">Add custom CSS styles to further customize your page</p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Live Preview -->
            <div class="card p-4">
                <h3 class="text-lg font-semibold text-white mb-4">Preview</h3>
                <div id="preview" class="w-full h-[600px] rounded-lg overflow-hidden">
                    <iframe id="previewFrame" class="w-full h-full" frameborder="0" 
                        src="<%= typeof page !== 'undefined' ? `/pages/${page._id}/preview` : '' %>">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const successMessage = document.getElementById('success-message');
        const errorMessage = document.getElementById('error-message');
        const previewButton = document.getElementById('previewButton');
        const previewFrame = document.getElementById('previewFrame');
        
        // Handle preview button click
        previewButton.addEventListener('click', function() {
            const previewUrl = previewFrame.getAttribute('src');
            if (previewUrl) {
                window.open(previewUrl, '_blank');
            }
        });
        
        function fadeOutAndRemove(element) {
            if (!element) return;
            const timeout = parseInt(element.getAttribute('data-timeout')) || 5000;
            
            setTimeout(() => {
                element.style.opacity = '0';
                setTimeout(() => element.remove(), 500);
            }, timeout);
        }

        fadeOutAndRemove(successMessage);
        fadeOutAndRemove(errorMessage);
    });
</script>