<%
title = 'Subscription Plans';
%>

<%- contentFor('body') %>

<div class="min-h-screen bg-gray-100 dark:bg-gray-900 rounded-2xl">
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="px-4 py-5 sm:px-0">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Subscription Plans</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage subscription plans and pricing</p>
    </div>

    <%- include('partials/tabs') %>

    <% if (typeof messages.success_msg !== 'undefined' && messages.success_msg.length > 0) { %>
      <div class="bg-green-900/50 text-green-400 p-4 rounded-lg mb-6">
        <%= messages.success_msg %>
      </div>
    <% } %>

    <% if (typeof messages.error_msg !== 'undefined' && messages.error_msg.length > 0) { %>
      <div class="bg-red-900/50 text-red-400 p-4 rounded-lg mb-6">
        <%= messages.error_msg %>
      </div>
    <% } %>

    <div class="mt-8">
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">All Plans</h2>
            <a href="/admin/plans/new" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-neon-blue hover:bg-neon-blue/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neon-blue">
              Create New Plan
            </a>
          </div>

          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
              <thead class="bg-gray-50 dark:bg-gray-700">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Name</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Code</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Price</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Interval</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Pages</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
                  <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                <% plans.forEach(plan => { %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900 dark:text-white"><%= plan.name %></div>
                      <div class="text-sm text-gray-500 dark:text-gray-400"><%= plan.description %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900 dark:text-white"><%= plan.code %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900 dark:text-white">$<%= plan.price %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900 dark:text-white"><%= plan.interval %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900 dark:text-white"><%= plan.limits.pages %> pages</div>
                      <div class="text-xs text-gray-500 dark:text-gray-400"><%= plan.limits.viewsPerPage %> views/page</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= plan.isActive ? 'bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-400' : 'bg-red-100 text-red-800 dark:bg-red-900/50 dark:text-red-400' %>">
                        <%= plan.isActive ? 'Active' : 'Inactive' %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a href="/admin/plans/<%= plan._id %>/edit" class="text-neon-blue hover:text-neon-blue/90 mr-4">Edit</a>
                      <form action="/admin/plans/<%= plan._id %>?_method=DELETE" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" onclick="return confirm('Are you sure you want to delete this plan?')">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('scripts') %>
<script>
  // Add any JavaScript for handling plan management here
</script>