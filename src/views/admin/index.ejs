<%
title = 'Admin Dashboard';
%>

<%- contentFor('body') %>
<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-2xl font-semibold text-white mb-6">Admin Dashboard</h1>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
            <div class="card p-5">
                <h3 class="text-lg font-medium text-gray-400 truncate">Total Users</h3>
                <p class="mt-1 text-3xl font-semibold text-white" id="totalUsers">Loading...</p>
            </div>

            <div class="card p-5">
                <h3 class="text-lg font-medium text-gray-400 truncate">Total Pages</h3>
                <p class="mt-1 text-3xl font-semibold text-white" id="totalPages">Loading...</p>
            </div>

            <div class="card p-5">
                <h3 class="text-lg font-medium text-gray-400 truncate">Total Views</h3>
                <p class="mt-1 text-3xl font-semibold text-white" id="totalViews">Loading...</p>
            </div>
        </div>

        <!-- Users Table -->
        <div class="mt-8">
            <div class="card">
                <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
                    <h3 class="text-lg leading-6 font-medium text-white">Users</h3>
                    <div class="relative max-w-xs">
                        <input type="text" id="userSearch" 
                            class="input w-full pr-10" 
                            placeholder="Search users...">
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="border-t border-gray-700">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-700">
                            <thead>
                                <tr>
                                    <th class="px-6 py-3 bg-dark-800 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">User</th>
                                    <th class="px-6 py-3 bg-dark-800 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-3 bg-dark-800 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Pages</th>
                                    <th class="px-6 py-3 bg-dark-800 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Joined</th>
                                    <th class="px-6 py-3 bg-dark-800 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-700" id="usersTableBody">
                                <tr>
                                    <td colspan="5" class="px-6 py-4 text-center text-gray-400">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Analytics Chart -->
        <div class="mt-8">
            <div class="card">
                <div class="px-4 py-5 sm:px-6">
                    <h3 class="text-lg leading-6 font-medium text-white">System Analytics</h3>
                </div>
                <div class="p-4">
                    <canvas id="analyticsChart" class="w-full" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('scripts') %>
<script>
    // Fetch admin analytics
    async function fetchAdminAnalytics() {
        try {
            const response = await fetch('/api/admin/analytics');
            const data = await response.json();
            
            document.getElementById('totalViews').textContent = data.totalViews.toLocaleString();
            document.getElementById('totalPages').textContent = data.totalPages.toLocaleString();
        } catch (error) {
            console.error('Failed to fetch admin analytics:', error);
        }
    }

    // Fetch users
    async function fetchUsers() {
        try {
            const response = await fetch('/api/admin/users');
            const users = await response.json();
            
            document.getElementById('totalUsers').textContent = users.length.toLocaleString();
            
            const tableBody = document.getElementById('usersTableBody');
            tableBody.innerHTML = users.map(user => `
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="h-10 w-10 flex-shrink-0">
                                <img class="h-10 w-10 rounded-full" src="${user.avatar || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(user.name)}" alt="">
                            </div>
                            <div class="ml-4">
                                <div class="text-sm font-medium text-white">${user.name}</div>
                                <div class="text-sm text-gray-400">${user.isAdmin ? 'Admin' : 'User'}</div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">${user.email}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">${user.pages?.length || 0}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">${new Date(user.createdAt).toLocaleDateString()}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${user.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}">
                            ${user.isActive ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                </tr>
            `).join('');
        } catch (error) {
            console.error('Failed to fetch users:', error);
        }
    }

    // Initialize analytics chart
    function initAnalyticsChart() {
        const ctx = document.getElementById('analyticsChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: Array.from({ length: 30 }, (_, i) => {
                    const d = new Date();
                    d.setDate(d.getDate() - (29 - i));
                    return d.toLocaleDateString();
                }),
                datasets: [{
                    label: 'Page Views',
                    data: Array.from({ length: 30 }, () => Math.floor(Math.random() * 1000)),
                    borderColor: '#10B981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: '#9CA3AF'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#9CA3AF',
                            maxRotation: 45,
                            minRotation: 45
                        }
                    }
                }
            }
        });
    }

    // Search functionality
    document.getElementById('userSearch').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.getElementById('usersTableBody').getElementsByTagName('tr');
        
        Array.from(rows).forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    // Initialize
    fetchAdminAnalytics();
    fetchUsers();
    initAnalyticsChart();
</script> 