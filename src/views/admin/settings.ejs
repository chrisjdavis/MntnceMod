<%
title = 'System Settings';
%>

<%- contentFor('body') %>
<div class="min-h-screen rounded-2xl">
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="px-4 py-5 sm:px-0">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">System Settings</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Configure your system settings and preferences</p>
    </div>

    <%- include('partials/tabs') %>

    <!-- Settings Form -->
    <div class="mt-8">
      <div class="border shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <form action="/admin/settings" method="POST">
            <!-- General Settings -->
            <div class="space-y-6">
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">General Settings</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Basic system configuration options</p>
              </div>

              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                  <label for="siteName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Site Name</label>
                  <div class="mt-1">
                    <input type="text" name="siteName" id="siteName" value="<%= settings.siteName %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label for="siteUrl" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Site URL</label>
                  <div class="mt-1">
                    <input type="url" name="siteUrl" id="siteUrl" value="<%= settings.siteUrl %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label for="messageTimeout" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message Timeout (seconds)</label>
                  <div class="mt-1">
                    <input type="number" name="messageTimeout" id="messageTimeout" min="0" max="30" value="<%= settings.messageTimeout / 1000 %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">How long to display success/error messages (0 to disable auto-dismiss)</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Email Settings -->
            <div class="mt-8 space-y-6">
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Email Settings</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Configure email notifications and delivery</p>
              </div>

              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                  <label for="smtpHost" class="block text-sm font-medium text-gray-700 dark:text-gray-300">SMTP Host</label>
                  <div class="mt-1">
                    <input type="text" name="smtpHost" id="smtpHost" value="<%= settings.smtpHost %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label for="smtpPort" class="block text-sm font-medium text-gray-700 dark:text-gray-300">SMTP Port</label>
                  <div class="mt-1">
                    <input type="number" name="smtpPort" id="smtpPort" value="<%= settings.smtpPort %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label for="smtpUser" class="block text-sm font-medium text-gray-700 dark:text-gray-300">SMTP Username</label>
                  <div class="mt-1">
                    <input type="text" name="smtpUser" id="smtpUser" value="<%= settings.smtpUser %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label for="smtpPass" class="block text-sm font-medium text-gray-700 dark:text-gray-300">SMTP Password</label>
                  <div class="mt-1">
                    <input type="password" name="smtpPass" id="smtpPass" value="<%= settings.smtpPass %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                </div>
              </div>
            </div>

            <!-- Subscription Settings -->
            <div class="mt-8 space-y-6">
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Subscription Settings</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Configure subscription plans and pricing</p>
              </div>

              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                  <label for="stripeSecretKey" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Stripe Secret Key</label>
                  <div class="mt-1">
                    <input type="password" name="stripeSecretKey" id="stripeSecretKey" value="<%= settings.stripeSecretKey %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label for="stripePublishableKey" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Stripe Publishable Key</label>
                  <div class="mt-1">
                    <input type="password" name="stripePublishableKey" id="stripePublishableKey" value="<%= settings.stripePublishableKey %>" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                </div>
              </div>
            </div>

            <!-- Maintenance Page Settings -->
            <div class="mt-8 space-y-6">
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Maintenance Page Settings</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Customize the appearance of maintenance pages</p>
              </div>

              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                  <label for="maintenanceBackgroundColor" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Background Color</label>
                  <div class="mt-1 flex">
                    <input type="color" name="maintenanceBackgroundColor" id="maintenanceBackgroundColor" value="<%= settings.maintenanceBackgroundColor || '#0f172a' %>" class="h-10 w-10 p-1 rounded border border-gray-300 dark:border-gray-600">
                    <input type="text" value="<%= settings.maintenanceBackgroundColor || '#0f172a' %>" class="ml-2 shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4" data-color-input>
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label for="maintenanceTextColor" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Text Color</label>
                  <div class="mt-1 flex">
                    <input type="color" name="maintenanceTextColor" id="maintenanceTextColor" value="<%= settings.maintenanceTextColor || '#ffffff' %>" class="h-10 w-10 p-1 rounded border border-gray-300 dark:border-gray-600">
                    <input type="text" value="<%= settings.maintenanceTextColor || '#ffffff' %>" class="ml-2 shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4" data-color-input>
                  </div>
                </div>

                <div class="sm:col-span-6">
                  <label for="maintenanceLogo" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Logo URL</label>
                  <div class="mt-1">
                    <input type="url" name="maintenanceLogo" id="maintenanceLogo" value="<%= settings.maintenanceLogo || '' %>" placeholder="https://example.com/logo.png" class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                  </div>
                  <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Enter a URL for your logo image. Recommended size: 200x50px</p>
                </div>

                <div class="sm:col-span-6">
                  <div class="relative flex items-start">
                    <div class="flex items-center h-5">
                      <input type="checkbox" name="showMaintenanceLogo" id="showMaintenanceLogo" class="focus:ring-neon-blue h-4 w-4 text-neon-blue border-gray-300 dark:border-gray-600 rounded" <%= settings.showMaintenanceLogo ? 'checked' : '' %>>
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="showMaintenanceLogo" class="font-medium text-gray-700 dark:text-gray-300">Show Logo on Maintenance Pages</label>
                      <p class="text-gray-500 dark:text-gray-400">Display your logo at the top of maintenance pages</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Incident Management Settings -->
            <div class="mt-8 space-y-6">
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Incident Management Settings</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Configure incident management features</p>
              </div>

              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                  <label for="enableIncidentManagement" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Enable Incident Management</label>
                  <div class="mt-1">
                    <input type="checkbox" name="enableIncidentManagement" id="enableIncidentManagement" 
                      <%= settings.enableIncidentManagement ? 'checked' : '' %> 
                      class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  </div>
                </div>

                <div class="sm:col-span-3">
                  <label for="incidentManagementPlan" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Required Plan</label>
                  <div class="mt-1">
                    <select name="incidentManagementPlan" id="incidentManagementPlan"
                      class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4">
                      <option value="free" <%= settings.incidentManagementPlan === 'free' ? 'selected' : '' %>>Free</option>
                      <option value="basic" <%= settings.incidentManagementPlan === 'basic' ? 'selected' : '' %>>Basic</option>
                      <option value="pro" <%= settings.incidentManagementPlan === 'pro' ? 'selected' : '' %>>Pro</option>
                      <option value="enterprise" <%= settings.incidentManagementPlan === 'enterprise' ? 'selected' : '' %>>Enterprise</option>
                    </select>
                  </div>
                </div>

                <div class="sm:col-span-6">
                  <label for="incidentEmailNotifications" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email Notifications</label>
                  <div class="mt-1 space-y-2">
                    <div class="flex items-center">
                      <input type="checkbox" name="incidentEmailNotifications[]" id="incidentEmailNotificationsNew" value="new"
                        <%= settings.incidentEmailNotifications?.includes('new') ? 'checked' : '' %>
                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                      <label for="incidentEmailNotificationsNew" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                        New incidents
                      </label>
                    </div>
                    <div class="flex items-center">
                      <input type="checkbox" name="incidentEmailNotifications[]" id="incidentEmailNotificationsUpdates" value="updates"
                        <%= settings.incidentEmailNotifications?.includes('updates') ? 'checked' : '' %>
                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                      <label for="incidentEmailNotificationsUpdates" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                        Incident updates
                      </label>
                    </div>
                    <div class="flex items-center">
                      <input type="checkbox" name="incidentEmailNotifications[]" id="incidentEmailNotificationsResolved" value="resolved"
                        <%= settings.incidentEmailNotifications?.includes('resolved') ? 'checked' : '' %>
                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                      <label for="incidentEmailNotificationsResolved" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                        Incident resolution
                      </label>
                    </div>
                  </div>
                </div>

                <div class="sm:col-span-6">
                  <label for="incidentSlackWebhook" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Slack Webhook URL</label>
                  <div class="mt-1">
                    <input type="text" name="incidentSlackWebhook" id="incidentSlackWebhook" 
                      value="<%= settings.incidentSlackWebhook || '' %>"
                      class="shadow-sm focus:ring-neon-blue focus:border-neon-blue block w-full sm:text-sm border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white p-4"
                      placeholder="https://hooks.slack.com/services/...">
                  </div>
                  <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Optional. Send incident notifications to Slack</p>
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-8">
              <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 dark:focus:ring-offset-gray-800">
                Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Sync color inputs
function setupColorInputs(colorId, textId) {
  const colorInput = document.getElementById(colorId);
  const textInput = colorInput.nextElementSibling;

  colorInput.addEventListener('input', (e) => {
    textInput.value = e.target.value;
  });

  textInput.addEventListener('input', (e) => {
    if (/^#[0-9A-Fa-f]{6}$/.test(e.target.value)) {
      colorInput.value = e.target.value;
    }
  });
}

setupColorInputs('maintenanceBackgroundColor');
setupColorInputs('maintenanceTextColor');

// Preview logo
const logoInput = document.getElementById('maintenanceLogo');
const showLogoCheckbox = document.getElementById('showMaintenanceLogo');

logoInput.addEventListener('input', function() {
  showLogoCheckbox.disabled = !this.value;
  if (!this.value) {
    showLogoCheckbox.checked = false;
  }
});

// Initialize logo checkbox state
showLogoCheckbox.disabled = !logoInput.value;
</script> 