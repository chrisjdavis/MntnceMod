<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title || locals.settings?.siteName || 'StatusSaaS' %></title>
    <link href="/css/styles.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <%- locals.head %>
</head>
<body class="bg-black text-white min-h-screen">
    <!-- Navigation -->
    <nav class="!max-w-[1400px] mx-auto bg-[#0a0a0a] sticky top-6 z-50 !px-6 md:!px-9 rounded-2xl">
        <div>
            <div class="flex justify-between h-16">
                <!-- Left section - Logo -->
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="flex items-center space-x-2">
                            <% if (locals.settings?.logo) { %>
                                <img src="<%= locals.settings.logo %>" alt="<%= locals.settings?.siteName || 'Logo' %>" class="h-8 w-auto">
                            <% } %>
                            <span class="text-2xl font-semibold text-white"><%= locals.settings?.siteName || 'StatusSaaS' %></span>
                        </a>
                    </div>
                </div>

                <!-- Center section - Navigation links -->
                <div class="hidden sm:flex sm:items-center sm:justify-center sm:flex-1">
                    <div class="flex space-x-8">
                        <a href="/features" class="text-gray-400 hover:text-white transition-colors duration-200">
                            Features
                        </a>
                        <a href="/pricing" class="text-gray-400 hover:text-white transition-colors duration-200">
                            Pricing
                        </a>
                    </div>
                </div>

                <!-- Right section - Auth buttons -->
                <div class="flex items-center">
                    <% if (locals.user) { %>
                        <div class="relative ml-3">
                            <div>
                                <button type="button" class="flex rounded-full bg-[#0a0a0a] text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                                    <span class="sr-only">Open user menu</span>
                                    <img class="h-8 w-8 rounded-full" src="<%= locals.user.avatar || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(locals.user.name) %>" alt="">
                                </button>
                            </div>

                            <!-- Dropdown menu -->
                            <div class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-[#0a0a0a] py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" id="user-menu">
                                <!-- User info section -->
                                <div class="px-4 py-3 border-b border-[#27272a]">
                                    <p class="text-sm font-medium text-white"><%= locals.user.name || 'User' %></p>
                                    <p class="text-sm text-gray-400 truncate"><%= locals.user.email %></p>
                                </div>
                                <a href="/dashboard" class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-[#111111]" role="menuitem" tabindex="-1">Dashboard</a>
                                <a href="/settings" class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-[#111111]" role="menuitem" tabindex="-1">Settings</a>
                                <% if (locals.user.isAdmin) { %>
                                    <a href="/admin" class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-[#111111]" role="menuitem" tabindex="-1">App Superadmin</a>
                                <% } %>
                                <form action="/auth/logout" method="POST" class="block">
                                    <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-[#111111]" role="menuitem" tabindex="-1">Logout</button>
                                </form>
                            </div>
                        </div>
                    <% } else { %>
                        <a href="/login" class="text-gray-400 hover:text-white transition-colors duration-200">Login</a>
                        <a href="/register" class="ml-4 text-gray-400 hover:text-white transition-colors duration-200">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <%- locals.body %>
    </main>

    <!-- Footer -->
    <footer class="mt-6 border-t border-[#222222]">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="text-center text-sm text-gray-400">
                <p>&copy; <%= new Date().getFullYear() %> <%= locals.settings?.siteName || 'StatusSaaS' %>. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // User menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const userMenuButton = document.getElementById('user-menu-button');
            const userMenu = document.getElementById('user-menu');

            if (userMenuButton && userMenu) {
                userMenuButton.addEventListener('click', function(event) {
                    event.stopPropagation();
                    userMenu.classList.toggle('hidden');
                });

                // Close the menu when clicking outside
                document.addEventListener('click', function(event) {
                    if (!userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
                        userMenu.classList.add('hidden');
                    }
                });
            }
        });
    </script>
    <%- locals.scripts %>
</body>
</html> 