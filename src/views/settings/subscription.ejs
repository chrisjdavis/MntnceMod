<%
title = 'Subscription Settings';
%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="px-4 py-5 sm:px-0">
      <h1 class="text-3xl font-bold text-white">Subscription Settings</h1>
      <p class="mt-1 text-sm text-gray-400">Manage your subscription and billing.</p>
    </div>
  </div>

  <%- include('../partials/messages') %>

  <div class="mt-0">
    <!-- Settings Navigation -->
    <div class="hidden sm:block">
      <nav class="bg-white dark:bg-gray-800 shadow-sm rounded-lg mb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex space-x-8">
            <a href="/settings" class="whitespace-nowrap py-4 px-1 border-transparent hover:border-white text-gray-500 hover:text-white border-b-2 font-medium text-sm flex items-center">
              <svg class="h-5 w-5 mr-2 inline-block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
              Profile
            </a>
            <a href="/settings/subscription" class="border-neon-blue text-neon-blue whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm flex items-center">
              <svg class="h-5 w-5 mr-2 inline-block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
                <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
              </svg>
              Subscription
            </a>
            <a href="/settings/appearance" class="whitespace-nowrap py-4 px-1 border-transparent hover:border-white text-gray-500 hover:text-white border-b-2 font-medium text-sm flex items-center">
              <svg class="h-5 w-5 mr-2 inline-block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
              </svg>
              Appearance
            </a>
            <a href="/settings/notifications" class="whitespace-nowrap py-4 px-1 border-transparent hover:border-white text-gray-500 hover:text-white border-b-2 font-medium text-sm flex items-center">
              <svg class="h-5 w-5 mr-2 inline-block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z" />
              </svg>
              Notifications
            </a>
            <a href="/settings/security" class="whitespace-nowrap py-4 px-1 border-transparent hover:border-white text-gray-500 hover:text-white border-b-2 font-medium text-sm flex items-center">
              <svg class="h-5 w-5 mr-2 inline-block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              Security
            </a>
          </div>
        </div>
      </nav>
    </div>

    <!-- Current Plan -->
    <% if (currentPlan) { %>
      <div class="bg-dark-800 rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-semibold text-white mb-4">Current Plan</h2>
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-white"><%= currentPlan.name %></h3>
            <p class="text-gray-400"><%= currentPlan.description %></p>
          </div>
          <div class="text-right">
            <p class="text-lg font-medium text-white">$<%= currentPlan.price %></p>
            <p class="text-sm text-gray-400">per <%= currentPlan.interval %></p>
          </div>
        </div>
        <div class="mt-4">
          <h4 class="text-sm font-medium text-gray-400 mb-2">Current Usage</h4>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-dark-700 rounded p-4">
              <p class="text-sm text-gray-400">Pages Created</p>
              <p class="text-lg font-medium text-white"><%= pageCount %> / <%= currentPlan.limits.pages %></p>
            </div>
            <div class="bg-dark-700 rounded p-4">
              <p class="text-sm text-gray-400">Views per Page</p>
              <p class="text-lg font-medium text-white"><%= currentPlan.limits.viewsPerPage.toLocaleString() %></p>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="bg-dark-800 rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-semibold text-white mb-4">Current Plan</h2>
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-white">Free Plan</h3>
            <p class="text-gray-400">Basic features for getting started</p>
          </div>
          <div class="text-right">
            <p class="text-lg font-medium text-white">$0</p>
            <p class="text-sm text-gray-400">forever</p>
          </div>
        </div>
        <div class="mt-4">
          <h4 class="text-sm font-medium text-gray-400 mb-2">Current Usage</h4>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-dark-700 rounded p-4">
              <p class="text-sm text-gray-400">Pages Created</p>
              <p class="text-lg font-medium text-white"><%= pageCount %> / 1</p>
            </div>
            <div class="bg-dark-700 rounded p-4">
              <p class="text-sm text-gray-400">Views per Page</p>
              <p class="text-lg font-medium text-white">1,000</p>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Available Plans -->
    <div class="bg-dark-800 rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-white mb-4">Available Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% plans.forEach(plan => { %>
          <div class="bg-dark-700 rounded-lg p-6 <%= plan.code === (currentPlan?.code || 'free') ? 'ring-2 ring-blue-500' : '' %>">
            <h3 class="text-lg font-medium text-white mb-2"><%= plan.name %></h3>
            <p class="text-gray-400 text-sm mb-4"><%= plan.description %></p>
            <div class="mb-4">
              <p class="text-2xl font-bold text-white">$<%= plan.price %></p>
              <p class="text-sm text-gray-400">per <%= plan.interval %></p>
            </div>
            <ul class="space-y-2 mb-6">
              <% plan.features.forEach(feature => { %>
                <li class="flex items-center text-sm text-gray-300">
                  <svg class="h-4 w-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <%= feature %>
                </li>
              <% }); %>
            </ul>
            <% if (plan.code === (currentPlan?.code || 'free')) { %>
              <button disabled class="w-full bg-gray-600 text-white px-4 py-2 rounded-lg cursor-not-allowed">
                Current Plan
              </button>
            <% } else { %>
              <form action="/settings/subscription/confirm" method="POST">
                <input type="hidden" name="planCode" value="<%= plan.code %>">
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                  Switch to <%= plan.name %>
                </button>
              </form>
            <% } %>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div> 