<%
title = 'Subscription Settings';
%>

<%- contentFor('body') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="px-4 py-5 sm:px-0">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Subscription Settings</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage your subscription and billing</p>
    </div>
  </div>

  <%- include('../partials/messages') %>
  <%- include('../partials/tabs') %>
  <div id="subscription-tab" class="tab-content border shadow rounded-lg p-6">
        <!-- Available Plans -->
        <div class="mt-2 space-y-4 sm:mt-2 sm:space-y-0 sm:grid sm:grid-cols-2 sm:gap-6 lg:max-w-4xl lg:mx-auto xl:max-w-none xl:mx-0 xl:grid-cols-3">
            <% plans.forEach(plan => { %>
                <div class="relative rounded-2xl <%= plan.code === currentPlan.code ? 'border-2 border-purple-500' : 'border-2 border-[#a855f7] dark:border-[#a855f7]' %> p-8 shadow-sm overflow-hidden">
                      <div class="absolute inset-0 bg-gradient-to-r from-[#6B3BFA] to-[#F11E76] rounded-2xl blur-3xl opacity-10"></div>
                      <div class="relative">
                          <h3 class="text-lg font-semibold leading-8 text-gray-900 dark:text-white">
                              <%= plan.name %>
                              <% if (plan.code === currentPlan.code) { %>
                                <span class="ml-2 text-sm text-[#6B3BFA]">(Current Plan)</span>
                              <% } %>
                          </h3>
                          
                          <p class="mt-2 flex items-baseline gap-x-1">
                              <span class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">$<%= plan.price %></span>
                              <span class="text-sm font-semibold leading-6 text-gray-600 dark:text-gray-400">/<%= plan.interval %></span>
                          </p>

                          <% 
                              const userCurrentPlan = plans.find(p => p.code === (currentPlan?.code || 'free'));
                              const isDowngrade = plan.price < userCurrentPlan.price;
                          %>
                          <form action="/settings/subscription/confirm" method="POST" class="mt-4">
                              <input type="hidden" name="planCode" value="<%= plan.code %>">
                              <button type="submit"
                                  class="w-full <%= plan.code === 'pro' ? 'bg-neon-blue text-black hover:bg-blue-400' : 'bg-dark-700 text-white hover:bg-dark-600' %> border border-transparent rounded-md py-2 text-sm font-semibold text-center">
                                  <%= plan.code === 'enterprise' ? 'Contact sales' : (isDowngrade ? 'Downgrade' : 'Upgrade') %>
                              </button>
                          </form>

                          <div class="mt-1 pt-8">
                              <h4 class="text-sm font-semibold text-gray-900 dark:text-white tracking-wide uppercase">What's included</h4>
                              <ul role="list" class="mt-6 space-y-4">
                                  <% plan.features.forEach(feature => { %>
                                      <li class="flex space-x-3">
                                          <svg class="flex-shrink-0 h-5 w-5 text-[#6B3BFA]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                          </svg>
                                          <span class="text-sm text-gray-600 dark:text-gray-400"><%= feature %></span>
                                      </li>
                                  <% }); %>
                              </ul>
                          </div>
                      </div>
                  </div>
            <% }); %>
        </div>
    </div>
</div> 