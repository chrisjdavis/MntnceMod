<%
title = 'Subscription Settings';
%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="px-4 py-5 sm:px-0">
      <h1 class="text-3xl font-bold text-white">Subscription Settings</h1>
      <p class="mt-1 text-sm text-gray-400">Manage your subscription and billing.</p>
    </div>
  </div>

  <%- include('../partials/messages') %>

  <%- include('../partials/tabs') %>

    <!-- Current Plan -->
    <% if (currentPlan) { %>
      <div class="bg-dark-800 rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-semibold text-white mb-4">Current Plan</h2>
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-white"><%= currentPlan.name %></h3>
            <p class="text-gray-400"><%= currentPlan.description %></p>
          </div>
          <div class="text-right">
            <p class="text-lg font-medium text-white">$<%= currentPlan.price %></p>
            <p class="text-sm text-gray-400">per <%= currentPlan.interval %></p>
          </div>
        </div>
        <div class="mt-4">
          <h4 class="text-sm font-medium text-gray-400 mb-2">Current Usage</h4>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-dark-700 rounded p-4">
              <p class="text-sm text-gray-400">Pages Created</p>
              <p class="text-lg font-medium text-white"><%= pageCount %> / <%= currentPlan.limits.pages %></p>
            </div>
            <div class="bg-dark-700 rounded p-4">
              <p class="text-sm text-gray-400">Views per Page</p>
              <p class="text-lg font-medium text-white"><%= currentPlan.limits.viewsPerPage.toLocaleString() %></p>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="bg-dark-800 rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-semibold text-white mb-4">Current Plan</h2>
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-white">Free Plan</h3>
            <p class="text-gray-400">Basic features for getting started</p>
          </div>
          <div class="text-right">
            <p class="text-lg font-medium text-white">$0</p>
            <p class="text-sm text-gray-400">forever</p>
          </div>
        </div>
        <div class="mt-4">
          <h4 class="text-sm font-medium text-gray-400 mb-2">Current Usage</h4>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-dark-700 rounded p-4">
              <p class="text-sm text-gray-400">Pages Created</p>
              <p class="text-lg font-medium text-white"><%= pageCount %> / 1</p>
            </div>
            <div class="bg-dark-700 rounded p-4">
              <p class="text-sm text-gray-400">Views per Page</p>
              <p class="text-lg font-medium text-white">1,000</p>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Available Plans -->
    <div class="bg-dark-800 rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-white mb-4">Available Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% plans.forEach(plan => { %>
          <div class="bg-dark-700 rounded-lg p-6 <%= plan.code === (currentPlan?.code || 'free') ? 'ring-2 ring-blue-500' : '' %>">
            <h3 class="text-lg font-medium text-white mb-2"><%= plan.name %></h3>
            <p class="text-gray-400 text-sm mb-4"><%= plan.description %></p>
            <div class="mb-4">
              <p class="text-2xl font-bold text-white">$<%= plan.price %></p>
              <p class="text-sm text-gray-400">per <%= plan.interval %></p>
            </div>
            <ul class="space-y-2 mb-6">
              <% plan.features.forEach(feature => { %>
                <li class="flex items-center text-sm text-gray-300">
                  <svg class="h-4 w-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <%= feature %>
                </li>
              <% }); %>
            </ul>
            <% if (plan.code === (currentPlan?.code || 'free')) { %>
              <button disabled class="w-full bg-gray-600 text-white px-4 py-2 rounded-lg cursor-not-allowed">
                Current Plan
              </button>
            <% } else { %>
              <form action="/settings/subscription/confirm" method="POST">
                <input type="hidden" name="planCode" value="<%= plan.code %>">
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                  Switch to <%= plan.name %>
                </button>
              </form>
            <% } %>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div> 