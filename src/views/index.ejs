<%
title = 'Home';
%>

<%- contentFor('body') %>
<!-- Hero Section -->
<div class="relative py-12 bg-[#0a0a0a] mb-6 rounded-2xl">
    <div class="max-w-3xl mx-auto relative">
        <div class="relative z-10 pb-8 sm:pb-16 md:pb-20 lg:pb-28 xl:pb-32">
            <main class="mt-10 mx-auto px-4 sm:mt-12 sm:px-6 lg:mt-16 lg:px-8 xl:mt-20">
                <div class="text-center">
                    <h1 class="text-4xl tracking-tight font-semibold text-white sm:text-5xl md:text-6xl drop-shadow-[0_2px_4px_rgba(0,0,0,0.1)] !leading-[4.5rem]">
                        <span class="block">Beautiful status pages</span>
                        <span class="block">for your service</span>
                    </h1>
                    <p class="mt-3 text-base text-white sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl">
                        Keep your users informed with real-time updates. Customizable, beautiful, and easy to set up status pages for your service.
                    </p>
                    <div class="mt-5 sm:mt-8 flex flex-col sm:flex-row justify-center space-y-3 sm:space-y-0 sm:space-x-3">
                        <div class="rounded-lg shadow">
                            <a href="/auth/register" 
                                class="w-full shadow-[0px_4px_10px_rgba(0,0,0,0.35)] flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-black bg-white hover:bg-gray-100 transition-colors duration-200 md:py-4 md:text-lg md:px-10">
                                Get started
                            </a>
                        </div>
                        <div>
                            <a href="/pricing" 
                                class="w-full shadow-[0px_4px_10px_rgba(0,0,0,0.35)] flex items-center justify-center px-8 py-3 border border-gray-300 dark:border-[#27272a] text-base font-medium rounded-lg text-gray-700 dark:text-gray-300 bg-white dark:bg-[#111111] hover:bg-gray-50 dark:hover:bg-[#1a1a1a] transition-colors duration-200 md:py-4 md:text-lg md:px-10">
                                View pricing
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="relative py-12 bg-[#0a0a0a] mb-6 rounded-2xl">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center">
            <h2 class="text-3xl font-semibold text-white sm:text-4xl drop-shadow-[0_2px_4px_rgba(0,0,0,0.1)]">
                Everything you need in a status page
            </h2>
            <p class="mt-4 text-base text-white text-lg">
                Simple, powerful features to keep your users informed
            </p>
        </div>

        <div class="mt-10">
            <div class="space-y-10">
                <!-- Feature 1 -->
                <div class="relative">
                    <dt>
                        <div class="absolute flex items-center justify-center h-12 w-12 rounded-lg bg-white text-black">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                        </div>
                        <p class="ml-16 text-lg leading-6 font-medium text-white">Real-time Updates</p>
                    </dt>
                    <dd class="mt-2 ml-16 text-base text-white">
                        Keep your users informed with instant updates about your service status.
                    </dd>
                </div>

                <!-- Feature 2 -->
                <div class="relative">
                    <dt>
                        <div class="absolute flex items-center justify-center h-12 w-12 rounded-lg bg-white text-black">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                            </svg>
                        </div>
                        <p class="ml-16 text-lg leading-6 font-medium text-white">Customizable Design</p>
                    </dt>
                    <dd class="mt-2 ml-16 text-base text-white">
                        Match your brand with custom colors, logos, and layouts.
                    </dd>
                </div>

                <!-- Feature 3 -->
                <div class="relative">
                    <dt>
                        <div class="absolute flex items-center justify-center h-12 w-12 rounded-lg bg-white text-black">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                        </div>
                        <p class="ml-16 text-lg leading-6 font-medium text-white">Analytics</p>
                    </dt>
                    <dd class="mt-2 ml-16 text-base text-white">
                        Track page views and understand how users interact with your status page.
                    </dd>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="relative bg-[#0a0a0a] mb-6 rounded-2xl">
    <div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 relative">
        <div class="text-center">
            <h2 class="text-3xl font-semibold tracking-tight text-white sm:text-4xl drop-shadow-[0_2px_4px_rgba(0,0,0,0.1)]">
                <span class="block">Ready to get started?</span>
                <span class="block">Create your status page today.</span>
            </h2>
            <div class="mt-8">
                <div class="inline-flex rounded-lg shadow">
                    <a href="/auth/register" 
                        class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-lg text-black bg-white hover:bg-gray-100 transition-colors duration-200">
                        Get started
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 