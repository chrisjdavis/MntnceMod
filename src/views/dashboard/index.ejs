<%
title = 'Dashboard';
locals.currentPath = '/dashboard';
%>
<%- contentFor('body') %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="scroll-m-20 text-4xl font-bold tracking-tight">Dashboard</h1>
    <% if (user.canCreatePage) { %>
      <a href="/pages/new" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
        Create New Page
      </a>
    <% } else { %>
      <div class="flex items-center space-x-4">
        <span class="text-warning">You've reached your page limit</span>
        <a href="/pricing" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
          Upgrade Plan
        </a>
      </div>
    <% } %>
  </div>
  
  <%- include('../partials/tab-nav') %>
  
  <!-- Subscription Card -->
  <div class="rounded-lg border bg-card text-card-foreground shadow-sm mb-8">
    <div class="p-6 space-y-6">
      <div class="grid gap-4 md:grid-cols-3">
        <div class="space-y-2">
          <h3 class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">Current Plan</h3>
          <p class="text-sm text-muted-foreground"><%= user.subscription.plan.charAt(0).toUpperCase() + user.subscription.plan.slice(1) %></p>
        </div>
        <div class="space-y-2">
          <h3 class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">Pages Created</h3>
          <p class="text-sm text-muted-foreground" id="page-count"><%= pages.length %> / <%= user.subscriptionLimits.pages %></p>
        </div>
        <div class="space-y-2">
          <h3 class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">Monthly Views</h3>
          <p class="text-sm text-muted-foreground" id="views-per-page">
            <% 
              const totalViews = pages.reduce((sum, page) => sum + (page.analytics?.totalViews || 0), 0);
              const viewsLimit = user.subscriptionLimits?.viewsPerPage || 0;
              const viewsRemaining = viewsLimit - totalViews;
            %>
            <%= viewsRemaining.toLocaleString() %> / <%= viewsLimit.toLocaleString() %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Pages -->
  <div class="rounded-lg border bg-card text-card-foreground shadow-sm mb-8">
    <div class="flex flex-col space-y-1.5 p-6">
      <h2 class="text-2xl font-semibold leading-none tracking-tight">Recent Pages</h2>
    </div>
    <div class="p-0">
      <% if (pages && pages.length > 0) { %>
        <div class="relative w-full overflow-auto">
          <table class="w-full caption-bottom text-sm">
            <thead class="[&_tr]:border-b">
              <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Page Details</th>
                <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Status</th>
                <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Last Updated</th>
                <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Actions</th>
              </tr>
            </thead>
            <tbody class="[&_tr:last-child]:border-0">
              <% pages.forEach(page => { %>
                <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                  <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                    <div class="space-y-0.5">
                      <p class="text-sm font-medium"><%= page.title %></p>
                      <p class="text-sm text-muted-foreground"><%= page.description || 'No description' %></p>
                    </div>
                  </td>
                  <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                    <span class="inline-flex items-center justify-center whitespace-nowrap rounded-md px-2.5 py-0.5 text-xs font-semibold ring-offset-background transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2
                      <%= page.status === 'operational' ? 'bg-success/15 text-success border border-success/20' : 
                         page.status === 'degraded' ? 'bg-warning/15 text-warning border border-warning/20' :
                         page.status === 'down' ? 'bg-destructive/15 text-destructive border border-destructive/20' :
                         'bg-info/15 text-info border border-info/20' %>">
                      <%= page.status %>
                    </span>
                  </td>
                  <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                    <p class="text-sm text-muted-foreground"><%= new Date(page.updatedAt).toLocaleDateString() %></p>
                  </td>
                  <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                    <div class="flex space-x-4">
                      <a href="/pages/<%= page._id %>/edit" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-3">Edit</a>
                      <a href="/pages/<%= page._id %>" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-3">View</a>
                      <a href="/pages/<%= page._id %>/preview" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-3">Preview</a>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="p-8 text-center">
          <p class="text-sm text-muted-foreground mb-4">No pages yet. Create your first page to get started!</p>
          <a href="/pages/new" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">Create your first page</a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
    <div class="flex flex-col space-y-1.5 p-6">
      <h2 class="text-2xl font-semibold leading-none tracking-tight">Recent Activity</h2>
    </div>
    <% if (activities && activities.length > 0) { %>
      <div class="p-6 pt-0">
        <div class="space-y-8">
          <% activities.forEach(activity => { %>
            <div class="flex items-start space-x-4">
              <div class="mt-1">
                <span class="flex h-8 w-8 items-center justify-center rounded-full bg-primary/10 text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-activity"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
                </span>
              </div>
              <div class="space-y-1">
                <p class="text-sm"><%= activity.description %></p>
                <p class="text-sm text-muted-foreground"><%= new Date(activity.createdAt).toLocaleString() %></p>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } else { %>
      <div class="p-8 text-center">
        <p class="text-sm text-muted-foreground">No recent activity.</p>
      </div>
    <% } %>
  </div>
</div>

<%- contentFor('scripts') %>
<script src="/js/realtime.js"></script> 