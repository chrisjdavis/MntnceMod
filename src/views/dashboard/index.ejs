<%
title = 'Dashboard';
%>
<%- contentFor('body') %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-white">Dashboard</h1>
    <% if (user.canCreatePage) { %>
      <a href="/pages/new" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
        Create New Page
      </a>
    <% } else { %>
      <div class="flex items-center space-x-4">
        <span class="text-yellow-400">You've reached your page limit</span>
        <a href="/pricing" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-colors">
          Upgrade Plan
        </a>
      </div>
    <% } %>
  </div>
  
  <div class="bg-dark-800 rounded-lg shadow-md overflow-hidden mb-8">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-dark-700">
        <thead>
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
              Subscription Details
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
              Current Usage
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
              Limits
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-dark-700">
          <tr class="hover:bg-dark-700/50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm">
                <div class="font-medium text-white">Current Plan</div>
                <div class="text-gray-400"><%= user.subscription.plan.charAt(0).toUpperCase() + user.subscription.plan.slice(1) %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm">
                <div class="font-medium text-white" id="page-count"><%= pages.length %> pages</div>
                <div class="text-gray-400">Currently Created</div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm">
                <div class="font-medium text-white" id="page-limits"><%= user.subscriptionLimits.pages %> pages</div>
                <div class="text-gray-400">Maximum Allowed</div>
              </div>
            </td>
          </tr>
          <tr class="hover:bg-dark-700/50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm">
                <div class="font-medium text-white">Views per Page</div>
                <div class="text-gray-400">Monthly Limit</div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap" colspan="2">
              <div class="text-sm">
                <div class="font-medium text-white" id="views-per-page">
                  <% 
                    const totalViews = pages.reduce((sum, page) => sum + (page.analytics.totalViews || 0), 0);
                    const viewsRemaining = user.subscriptionLimits.viewsPerPage - totalViews;
                    const viewsRemainingColor = viewsRemaining < 1000 ? 'text-yellow-400' : 'text-white';
                  %>
                 <%= viewsRemaining %>/<%= user.subscriptionLimits.viewsPerPage.toLocaleString() %> views
                </div>
                <div class="text-gray-400">Per Page Monthly</div>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Recent Pages -->
  <div class="bg-dark-800 rounded-lg shadow-md overflow-hidden mb-8">
    <div class="px-6 py-4 border-b border-dark-700">
      <h2 class="text-xl font-semibold text-white">Recent Pages</h2>
    </div>
    <div class="overflow-x-auto">
      <% if (pages && pages.length > 0) { %>
        <table class="min-w-full divide-y divide-dark-700">
          <thead>
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Page Details
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Status
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Last Updated
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-dark-700">
            <% pages.forEach(page => { %>
              <tr class="hover:bg-dark-700/50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm">
                    <div class="font-medium text-white"><%= page.title %></div>
                    <div class="text-gray-400"><%= page.description || 'No description' %></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 text-xs rounded-full 
                    <%= page.status === 'operational' ? 'bg-green-900/50 text-green-400' : 
                       page.status === 'degraded' ? 'bg-yellow-900/50 text-yellow-400' :
                       page.status === 'down' ? 'bg-red-900/50 text-red-400' :
                       'bg-blue-900/50 text-blue-400' %>">
                    <%= page.status %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-400">
                    <%= new Date(page.updatedAt).toLocaleDateString() %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <div class="flex space-x-4">
                    <a href="/pages/<%= page._id %>/edit" class="text-blue-400 hover:text-blue-300">Edit</a>
                    <a href="/pages/<%= page._id %>" class="text-blue-400 hover:text-blue-300">View</a>
                    <a href="/pages/<%= page._id %>/preview" class="text-blue-400 hover:text-blue-300">Preview</a>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <div class="p-8 text-center">
          <p class="text-gray-400 mb-4">No pages yet. Create your first page to get started!</p>
          <a href="/pages/new" class="text-blue-400 hover:text-blue-300">Create your first page â†’</a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-dark-800 rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-dark-700">
      <h2 class="text-xl font-semibold text-white">Recent Activity</h2>
    </div>
    <% if (activities && activities.length > 0) { %>
      <table class="min-w-full divide-y divide-dark-700">
        <tbody>
          <% activities.forEach(activity => { %>
            <tr class="hover:bg-dark-700/50">
              <td class="px-6 py-4">
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-blue-900/50">
                      <svg class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </span>
                  </div>
                  <div>
                    <p class="text-sm text-gray-300"><%= activity.description %></p>
                    <p class="text-xs text-gray-500"><%= new Date(activity.createdAt).toLocaleString() %></p>
                  </div>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="p-8 text-center">
        <p class="text-gray-400">No recent activity.</p>
      </div>
    <% } %>
  </div>
</div>

<%- contentFor('scripts') %>
<script src="/js/realtime.js"></script> 