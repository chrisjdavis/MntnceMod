<%
title = 'My Pages';
%>
<%- contentFor('body') %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-white">My Pages</h1>
    <% if (user.canCreatePage) { %>
      <a href="/pages/new" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
        Create New Page
      </a>
    <% } else { %>
      <div class="flex items-center space-x-4">
        <span class="text-yellow-400">You've reached your page limit</span>
        <a href="/pricing" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-colors">
          Upgrade Plan
        </a>
      </div>
    <% } %>
  </div>

  <div class="bg-dark-800 rounded-lg shadow-md overflow-hidden mb-8">
    <table class="min-w-full divide-y divide-dark-700">
      <thead>
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
            Subscription Details
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
            Current Usage
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
            Limits
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-dark-700">
        <tr class="hover:bg-dark-700/50">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm">
              <div class="font-medium text-white">Current Plan</div>
              <div class="text-gray-400"><%= user.subscription.plan.charAt(0).toUpperCase() + user.subscription.plan.slice(1) %></div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm">
              <div class="font-medium text-white" id="page-count"><%= pages.length %> pages</div>
              <div class="text-gray-400">Currently Created</div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm">
              <div class="font-medium text-white" id="page-limits"><%= user.subscriptionLimits.pages %> pages</div>
              <div class="text-gray-400">Maximum Allowed</div>
            </div>
          </td>
        </tr>
        <tr class="hover:bg-dark-700/50">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm">
              <div class="font-medium text-white">Views per Page</div>
              <div class="text-gray-400">Monthly Limit</div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap" colspan="2">
            <div class="text-sm">
              <div class="font-medium text-white" id="views-per-page"><%= user.subscriptionLimits.viewsPerPage.toLocaleString() %> views</div>
              <div class="text-gray-400">Per Page Monthly</div>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <% if (pages && pages.length > 0) { %>
    <div class="bg-dark-800 rounded-lg shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-dark-700">
          <thead>
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Page Details
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Status
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Views
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Last Updated
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-dark-700">
            <% pages.forEach(page => { %>
              <tr class="hover:bg-dark-700/50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm">
                    <div class="font-medium text-white"><%= page.title %></div>
                    <div class="text-gray-400"><%= page.description %></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 text-xs rounded-full 
                    <%= page.status === 'operational' ? 'bg-green-900/50 text-green-400' : 
                       page.status === 'degraded' ? 'bg-yellow-900/50 text-yellow-400' :
                       page.status === 'down' ? 'bg-red-900/50 text-red-400' :
                       page.status === 'scheduled' ? 'bg-purple-900/50 text-purple-400' :
                       'bg-blue-900/50 text-blue-400' %>">
                    <%= page.status %>
                    <% if (page.status === 'scheduled' && page.scheduledFor) { %>
                      <span class="ml-1 text-xs opacity-75">
                        (<%= new Date(page.scheduledFor).toLocaleString() %>)
                      </span>
                    <% } %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm">
                    <div class="font-medium text-white"><%= page.analytics.totalViews.toLocaleString() %></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-400">
                    <%= new Date(page.updatedAt).toLocaleDateString() %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <div class="flex space-x-8">
                    <a href="/pages/<%= page._id %>/edit" class="text-blue-400 hover:text-blue-300 flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                      Edit
                    </a>
                    <a href="/pages/<%= page._id %>/preview" class="text-blue-400 hover:text-blue-300 flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                      Preview
                    </a>
                    <% if (page.status !== 'archived') { %>
                      <form action="/pages/<%= page._id %>/archive" method="POST" class="inline">
                        <button type="submit" class="text-yellow-400 hover:text-yellow-300 flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                          </svg>
                          Archive
                        </button>
                      </form>
                    <% } %>
                    <form action="/pages/<%= page._id %>?_method=DELETE" method="POST" class="inline">
                      <button type="submit" class="text-red-400 hover:text-red-300 flex items-center" 
                              onclick="return confirm('Are you sure you want to delete this page?')">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  <% } else { %>
    <div class="bg-dark-800 rounded-lg shadow-md p-8 text-center">
      <p class="text-gray-400 mb-4">No pages yet. Create your first page to get started!</p>
      <% if (user.canCreatePage) { %>
        <a href="/pages/new" class="text-blue-400 hover:text-blue-300">Create your first page â†’</a>
      <% } else { %>
        <div class="flex flex-col items-center space-y-4">
          <span class="text-yellow-400">You've reached your page limit</span>
          <a href="/pricing" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-colors">
            Upgrade Plan to Create Pages
          </a>
        </div>
      <% } %>
    </div>
  <% } %>
</div>

<%- contentFor('scripts') %>
<script src="/js/realtime.js"></script> 