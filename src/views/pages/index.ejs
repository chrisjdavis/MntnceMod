<%
title = 'My Pages';
locals.currentPath = '/pages';
%>
<%- contentFor('body') %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="scroll-m-20 text-4xl font-bold tracking-tight">My Pages</h1>
    <% if (user.canCreatePage) { %>
      <a href="/pages/new" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
        Create New Page
      </a>
    <% } else { %>
      <div class="flex items-center space-x-4">
        <span class="text-warning">You've reached your page limit</span>
        <a href="/pricing" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
          Upgrade Plan
        </a>
      </div>
    <% } %>
  </div>

  <%- include('../partials/tab-nav') %>

  <!-- Subscription Card -->
  <div class="rounded-lg border bg-card text-card-foreground shadow-sm mb-8">
    <div class="p-6">
      <div class="grid gap-8 md:grid-cols-2">
        <div class="space-y-4">
          <div class="space-y-4">
            <h3 class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">Subscription Details</h3>
            <div class="grid gap-2">
              <div class="flex justify-between items-center">
                <span class="text-sm text-muted-foreground">Current Plan</span>
                <span class="text-sm font-medium"><%= user.subscription.plan.charAt(0).toUpperCase() + user.subscription.plan.slice(1) %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-muted-foreground">Billing Period</span>
                <span class="text-sm font-medium"><%= user.subscription.billingPeriod || 'Monthly' %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-muted-foreground">Next Billing Date</span>
                <span class="text-sm font-medium"><%= user.subscription.nextBillingDate ? new Date(user.subscription.nextBillingDate).toLocaleDateString() : 'N/A' %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="space-y-4">
          <div class="space-y-4">
            <h3 class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">Usage & Limits</h3>
            <div class="grid gap-2">
              <div class="flex justify-between items-center">
                <span class="text-sm text-muted-foreground">Pages</span>
                <span class="text-sm font-medium" id="page-count"><%= pages.length %> / <%= user.subscriptionLimits.pages %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-muted-foreground">Views Per Page</span>
                <span class="text-sm font-medium" id="views-per-page"><%= user.subscriptionLimits.viewsPerPage.toLocaleString() %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-muted-foreground">Total Monthly Views</span>
                <span class="text-sm font-medium" id="total-views">
                  <% 
                    const totalViews = pages.reduce((sum, page) => sum + (page.analytics?.totalViews || 0), 0);
                    const maxViews = user.subscriptionLimits.viewsPerPage * user.subscriptionLimits.pages;
                  %>
                  <%= totalViews.toLocaleString() %> / <%= maxViews.toLocaleString() %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if (pages && pages.length > 0) { %>
    <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
      <div class="relative w-full overflow-auto">
        <table class="w-full caption-bottom text-sm">
          <thead class="[&_tr]:border-b">
            <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Page Details</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Status</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Views</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Last Updated</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Actions</th>
            </tr>
          </thead>
          <tbody class="[&_tr:last-child]:border-0">
            <% pages.forEach(page => { %>
              <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                  <div class="space-y-0.5">
                    <p class="text-sm font-medium"><%= page.title %></p>
                    <p class="text-sm text-muted-foreground"><%= page.description %></p>
                  </div>
                </td>
                <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                  <span class="inline-flex items-center justify-center whitespace-nowrap rounded-md px-2.5 py-0.5 text-xs font-semibold uppercase ring-offset-background transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2
                    <%= (page.status === 'operational' || page.status === 'published') ? 'bg-success/15 text-success border border-success/20' : 
                       page.status === 'degraded' ? 'bg-warning/15 text-warning border border-warning/20' :
                       page.status === 'down' ? 'bg-destructive/15 text-destructive border border-destructive/20' :
                       page.status === 'scheduled' || page.status === 'draft' ? 'bg-info/15 text-info border border-info/20' :
                       'bg-secondary/15 text-secondary border border-secondary/20' %>">
                    <%= page.status %>
                    <% if (page.status === 'scheduled' && page.scheduledFor) { %>
                      <span class="ml-1 text-xs opacity-75">
                        (<%= new Date(page.scheduledFor).toLocaleString() %>)
                      </span>
                    <% } %>
                  </span>
                </td>
                <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                  <p class="text-sm text-muted-foreground"><%= page.analytics.totalViews.toLocaleString() %></p>
                </td>
                <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                  <p class="text-sm text-muted-foreground"><%= new Date(page.updatedAt).toLocaleDateString() %></p>
                </td>
                <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">
                  <div class="flex space-x-4">
                    <a href="/pages/<%= page._id %>/edit" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-3">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                      </svg>
                      Edit
                    </a>
                    <a href="/pages/<%= page._id %>/preview" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-3">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                        <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                        <circle cx="12" cy="12" r="3"/>
                      </svg>
                      Preview
                    </a>
                    <% if (page.status !== 'archived') { %>
                      <form action="/pages/<%= page._id %>/archive" method="POST" class="inline">
                        <button type="submit" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-3">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                            <rect width="20" height="5" x="2" y="3" rx="1"/>
                            <path d="M4 8v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8"/>
                            <path d="M10 12h4"/>
                          </svg>
                          Archive
                        </button>
                      </form>
                    <% } %>
                    <form action="/pages/<%= page._id %>?_method=DELETE" method="POST" class="inline">
                      <button type="submit" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-3 text-destructive" onclick="return confirm('Are you sure you want to delete this page?')">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                          <path d="M3 6h18"/>
                          <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                          <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                          <line x1="10" y1="11" x2="10" y2="17"/>
                          <line x1="14" y1="11" x2="14" y2="17"/>
                        </svg>
                        Delete
                      </button>
                    </form>
                      <div class="flex items-center justify-end space-x-2">
                        <% if (!page.deployed) { %>
                          <form action="/pages/<%= page._id %>/deploy" method="POST" class="inline">
                            <button type="submit" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-3">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/>
                              </svg>
                              Deploy
                            </button>
                          </form>
                        <% } else if (page.status === 'scheduled') { %>
                          <span class="text-yellow-400">Scheduled</span>
                        <% } else { %>
                          <form action="/pages/<%= page._id %>/toggle" method="POST" class="inline">
                            <button type="submit" class="<%= page.status === 'published' ? 'text-red-400 hover:text-red-300' : 'text-green-400 hover:text-green-300' %>">
                              <%= page.status === 'published' ? 'Deactivate' : 'Activate' %>
                            </button>
                          </form>
                        <% } %>
                      </div>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  <% } else { %>
    <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
      <div class="p-8 text-center">
        <p class="text-sm text-muted-foreground mb-4">No pages yet. Create your first page to get started!</p>
        <% if (user.canCreatePage) { %>
          <a href="/pages/new" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">Create your first page</a>
        <% } else { %>
          <div class="flex flex-col items-center space-y-4">
            <span class="text-warning">You've reached your page limit</span>
            <a href="/pricing" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
              Upgrade Plan to Create Pages
            </a>
          </div>
        <% } %>
      </div>
    </div>
  <% } %>
</div>

<%- contentFor('scripts') %>
<script src="/js/realtime.js"></script> 