<%- contentFor('title', page.title) %>
<%- contentFor('body') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= page.title %></h1>
      <div class="flex w-full justify-start">
        <a href="/pages" class="text-gray-600 hover:text-gray-800">
          Back to Pages
        </a>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-6">
        <span class="px-3 py-1 text-sm rounded-full <%= page.status === 'operational' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= page.status %>
        </span>
        <div class="text-sm text-gray-500">
          Last updated: <%= new Date(page.updatedAt).toLocaleDateString() %>
        </div>
      </div>

      <div class="prose max-w-none">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Description</h2>
        <p class="text-gray-600 mb-8"><%= page.description %></p>

        <h2 class="text-xl font-semibold text-gray-900 mb-4">Content</h2>
        <div class="text-gray-600 whitespace-pre-wrap"><%= page.content %></div>
      </div>

      <div class="mt-8 pt-6 border-t border-gray-200">
        <form action="/pages/<%= page._id %>?_method=DELETE" method="POST" class="flex justify-end">
          <a href="/pages/<%= page._id %>/edit" class="text-gray-600 mr-8 hover:text-gray-800">Edit</a>
          <a href="/pages/<%= page._id %>/preview" class="text-gray-600 mr-8 hover:text-gray-800">
            Preview
          </a>
          <button type="submit" class="text-red-600 hover:text-red-800" onclick="return confirm('Are you sure you want to delete this page?')">
            Delete Page
          </button>
        </form>
      </div>
    </div>
  </div>
</div>