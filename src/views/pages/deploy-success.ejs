<%
title = 'Deployment Successful';
%>
<%- contentFor('body') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-dark-800 rounded-lg shadow-md p-6">
      <div class="text-center">
        <div class="mb-6">
          <svg class="mx-auto h-12 w-12 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        
        <h1 class="text-3xl font-bold text-white mb-4">Deployment Successful!</h1>
        <p class="text-gray-400 mb-8">
          Your maintenance page has been successfully deployed to Cloudflare.
          <% if (page.status === 'scheduled') { %>
            The page will be automatically activated on <%= new Date(page.scheduledFor).toLocaleString() %>.
          <% } else { %>
            You can now activate the page to make it live.
          <% } %>
        </p>

        <div class="space-y-4">
          <% if (page.status !== 'scheduled') { %>
            <form action="/pages/<%= page._id %>/toggle" method="POST" class="inline-block">
              <button type="submit" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors">
                Activate Page Now
              </button>
            </form>
          <% } %>
          
          <div class="mt-4">
            <a href="/pages" class="text-blue-400 hover:text-blue-300">
              Back to Pages
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 